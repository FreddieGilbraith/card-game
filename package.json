{
	"name": "@little-bonsai/ingrates",
	"version": "0.2.0-alpha.2",
	"description": "An isomorphic actor system",
	"main": "lib/index.js",
	"keywords": ["actor", "actors", "browser", "node", "isomorphic"],
	"files": ["lib", "src"],
	"scripts": {
		"test": "NODE_ENV=test jest --coverage true src test",
		"build": "NODE_ENV=production babel src --out-dir lib",
		"prepublishOnly": "npm run build",
		"format": "prettier --write src/**/*",
		"prepushOnly": "npm run format && && npm run test && npm run build",
		"test:watch": "NODE_ENV=test jest src test --watch --bail --runInBand",
		"watch": "NODE_ENV=staging babel src --out-dir lib --watch"
	},
	"author": "",
	"license": "ISC",
	"eslintConfig": {
		"extends": "react-app"
	},
	"prettier": {
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"babel": {
		"env": {
			"production": {
				"presets": ["minify"]
			}
		},
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "> 0.25%, not dead"
				}
			]
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.10.4",
		"@babel/core": "^7.10.5",
		"@babel/preset-env": "^7.10.4",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.1.0",
		"babel-preset-minify": "^0.5.1",
		"eslint": "^7.4.0",
		"eslint-config-react-app": "^5.2.1",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.3",
		"jest-cli": "^26.1.0",
		"prettier": "^2.0.5",
		"ramda": "^0.27.0"
	},
	"dependencies": {
		"nanoid": "^3.1.10"
	}
}
