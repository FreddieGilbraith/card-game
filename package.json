{
	"name": "@little-bonsai/ingrates",
	"version": "0.5.3",
	"sideEffects": false,
	"description": "An isomorphic actor system",
	"source": "src/index.js",
	"main": "dist/index.js",
	"module": "dist/index.module.js",
	"unpkg": "dist/index.umd.js",
	"exports": "./dist/foo.modern.js",
	"keywords": [
		"actor",
		"actors",
		"browser",
		"node",
		"isomorphic"
	],
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"docs:build": "run-p docs:build:**",
		"docs:build:pages": "exit 0",
		"docs:build:css": "mkdirp docs/build && postcss docs/src/index.css -o docs/build/index.css",
		"docs:watch": "watch -p 'docs/**/*' -c 'npm docs:build",
		"test": "NODE_ENV=test jest --coverage true src test",
		"build": "microbundle",
		"prepublishOnly": "npm run build",
		"format": "prettier --write src/**/*",
		"lint": "eslint . && prettier --check src/**/*",
		"prepushOnly": "npm run format && && npm run test && npm run build",
		"test:watch": "NODE_ENV=test jest src test --watch --bail --runInBand",
		"watch": "microbundle watch"
	},
	"author": "",
	"license": "ISC",
	"eslintConfig": {
		"extends": "@little-bonsai"
	},
	"prettier": {
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"**/*.md"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.13.10",
		"@babel/core": "^7.13.10",
		"@babel/preset-env": "^7.13.10",
		"@little-bonsai/eslint-config": "0.0.3",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.6.3",
		"babel-polyfill": "^6.26.0",
		"babel-preset-minify": "^0.5.1",
		"eslint": "^7.22.0",
		"jest-cli": "^26.6.3",
		"microbundle": "^0.13.0",
		"mkdirp": "^0.5.5",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.2.9",
		"postcss-cli": "^8.3.1",
		"prettier": "^2.2.1",
		"ramda": "^0.27.1",
		"tailwindcss": "^2.0.4"
	},
	"dependencies": {
		"fixed-id": "^1.0.0"
	}
}
