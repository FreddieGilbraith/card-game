{
	"name": "@little-bonsai/ingrates",
	"version": "0.3.1",
	"description": "An isomorphic actor system",
	"main": "lib/index.js",
	"keywords": [
		"actor",
		"actors",
		"browser",
		"node",
		"isomorphic"
	],
	"files": [
		"lib",
		"src"
	],
	"scripts": {
		"test": "NODE_ENV=test jest --coverage true src test",
		"build": "NODE_ENV=production babel src --out-dir lib",
		"prepublishOnly": "npm run build",
		"format": "prettier --write src/**/*",
		"prepushOnly": "npm run format && && npm run test && npm run build",
		"test:watch": "NODE_ENV=test jest src test --watch --bail --runInBand",
		"watch": "NODE_ENV=staging babel src --out-dir lib --watch"
	},
	"author": "",
	"license": "ISC",
	"eslintConfig": {
		"extends": "react-app"
	},
	"prettier": {
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"babel": {
		"env": {
			"production": {
				"presets": [
					"minify"
				]
			}
		},
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "> 0.25%, not dead"
				}
			]
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.12.1",
		"@babel/core": "^7.12.3",
		"@babel/preset-env": "^7.12.1",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.6.2",
		"babel-polyfill": "^6.26.0",
		"babel-preset-minify": "^0.5.1",
		"eslint": "^7.12.1",
		"eslint-config-react-app": "^6.0.0",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.21.5",
		"jest-cli": "^26.6.2",
		"prettier": "^2.1.2",
		"ramda": "^0.27.1"
	},
	"dependencies": {
		"nanoid": "^3.1.16",
		"rome": "^10.0.4-beta"
	}
}
